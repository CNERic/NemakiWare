<% if @users %>
<div id='user_list'>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>
					<%=t('model.user.id')%>
					<!--Create Action -->
					<%= link_to raw("<i class='icon-plus'></i> " + t('view.user.index.new_user')),
					new_user_path(@popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</th>
				<th>
					<%=t('model.user.display_name')%>
				</th>
				<th>
					<%=t('model.user.first_name')%>
				</th>
				<th>
					<%=t('model.user.last_name')%>
				</th>
				<th>
					<%=t('model.user.email')%>
				</th>
				<th class="nemaki-explore-list-action"><%=t('view.node_list.action')%></th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |u| %>
			<tr>
				<!--ID-->
				<td>
					<%= u.id%>
				</td>
				<!--Display Name-->
				<td>
					<%= u.name%>
				</td>
				<!--First Name-->
				<td>
					<%= u.first_name%>
				</td>
				<!--Last Name-->
				<td>
					<%= u.last_name%>
				</td>
				<!--Email-->
				<td>
					<%= mail_to u.email%>
				</td>
				<!--Action-->
				<td>
					<%= link_to raw("<i class='icon-edit'></i>"),
					edit_user_path(u.id, @popup_param),
					:title => t('view.node_list.show'),
					:class => 'thickbox btn'%>
					<%= link_to raw("<i class='icon-cog'></i>"),
					edit_password_user_path(u.id, @popup_param),
					:title => t('view.user.index.change_password'),
					:class => 'thickbox btn'%>
					<%= link_to raw("<i class='icon-remove'></i>"),
					user_path(u.id),
					:title => t('view.node_list.delete'),
					:class => 'btn', :method => :delete, :confirm => t('view.node_list.delete_confirmation')%>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>
<% end %>