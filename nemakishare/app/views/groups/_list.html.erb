<div id='groups_list'>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>
					グループID
					<!--Create Action-->
					<%= link_to raw("<i class='icon-plus'></i> 新規グループ"),
					new_group_path(@popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</th>
				<th>
					表示名
				</th>
				<th>
					メンバ(ユーザ)
				</th>
				<th>
					メンバ(グループ)
				</th>
				
				<th class="nemaki-explore-list-action">アクション</th>
			</tr>
		</thead>
		<% if @groups %>
		<tbody>
			<% @groups.each do |g| %>
			<tr>
				<!--ID-->
				<td>
					<%= g.id %>
				</td>
				<!--Display Name-->
				<td>
					<%= g.name %>
				</td>
				<!--Member(User)-->
				<td>
					<%= g.users.size %>
					<!--Add Member Users Action -->
					<%= link_to raw("<i class='icon-cog'></i>管理"),
					edit_member_users_group_path(g.id, @popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</td>
				<!--Member(Group)-->
				<td>
					<%= g.groups.size %>
					<%= link_to raw("<i class='icon-cog'></i>管理"),
					edit_member_groups_group_path(g.id, @popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</td>
				
				<!--Action-->
				<td>
					<%= link_to raw("<i class='icon-edit'></i>"),
					edit_group_path(g.id, @popup_param),
					:title => '詳細編集',
					:class => 'thickbox btn'%>
					<%= link_to raw("<i class='icon-remove'></i>"),
					group_path(g.id),
					:title => '削除',
					:class => 'btn', :method => :delete, :confirm => '本当に削除しますか？'%>
				</td>
			</tr>
			<% end %>
		</tbody>
		<% end %>
	</table>
</div>
