<div id='groups_list'>
	<table class="table table-striped table-hover">
		<thead>
			<tr>
				<th>
					<%=t('model.group.id')%>
					<!--Create Action-->
					<%= link_to raw("<i class='icon-plus'></i> " + t('view.group.index.new_group')),
					new_group_path(@popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</th>
				<th>
					<%=t('model.group.name')%>
				</th>
				<th>
					<%=t('model.group.users')%>
				</th>
				<th>
					<%=t('model.group.groups')%>
				</th>
				
				<th class="nemaki-explore-list-action"><%=t('view.node_list.actions')%></th>
			</tr>
		</thead>
		<% if @groups %>
		<tbody>
			<% @groups.each do |g| %>
			<tr>
				<!--ID-->
				<td>
					<%= g.id %>
				</td>
				<!--Display Name-->
				<td>
					<%= g.name %>
				</td>
				<!--Member(User)-->
				<td>
					<%= g.users.size %>
					<!--Add Member Users Action -->
					<%= link_to raw("<i class='icon-cog'></i>" + t('view.group.index.manage')),
					edit_member_users_group_path(g.id, @popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</td>
				<!--Member(Group)-->
				<td>
					<%= g.groups.size %>
					<%= link_to raw("<i class='icon-cog'></i>" + t('view.group.index.manage')),
					edit_member_groups_group_path(g.id, @popup_param),
					:class => 'thickbox btn btn-small btn-primary'%>
				</td>
				
				<!--Action-->
				<td>
					<%= link_to raw("<i class='icon-edit'></i>"),
					edit_group_path(g.id, @popup_param),
					:title => t('view.node_list.edit'),
					:class => 'thickbox btn'%>
					<%= link_to raw("<i class='icon-remove'></i>"),
					group_path(g.id),
					:title => t('view.node_list.delete'),
					:class => 'btn', :method => :delete, :confirm => t('view.node_list.delete_confirmation')%>
				</td>
			</tr>
			<% end %>
		</tbody>
		<% end %>
	</table>
</div>
